<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Medication name -->
    <EditText
        android:id="@+id/txtMedicationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medication Name" />

    <!-- Dosage -->
    <EditText
        android:id="@+id/txtDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosage (e.g. 1 tablet)" />

    <!-- Start Time -->
    <EditText
        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time (e.g. 08:00)" />

    <!-- Frequency -->
    <EditText
        android:id="@+id/txtFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repeat every X hours (e.g. 8)" />

    <EditText
        android:id="@+id/txtStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of tablets"
        android:inputType="number" />

    <!-- Save button -->
    <Button
        android:id="@+id/btnSaveMedication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="20dp" />

</LinearLayout>
