<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Needed for showing notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediTrack"
        tools:targetApi="31">

        <!-- Welcome screen (launcher) -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main screen -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Add Medication screen -->
        <activity
            android:name=".AddMedicationActivity"
            android:exported="false" />

        <!-- Receiver for Taken / Missed actions -->
        <receiver android:name=".ReminderActionReceiver" />

        <!-- Receiver for Snooze action -->
        <receiver android:name=".ReminderResponseReceiver" />

    </application>
</manifest>
